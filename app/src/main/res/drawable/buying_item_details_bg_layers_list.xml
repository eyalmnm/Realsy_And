<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="@dimen/buying_item_details_width"
                android:height="@dimen/buying_item_details_height" />
            <solid android:color="@color/light_grey" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="@dimen/buying_item_details_bg_width"
                android:height="@dimen/buying_item_details_bg_height" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>