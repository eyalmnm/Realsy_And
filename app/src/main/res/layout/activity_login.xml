<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/builging" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_semi_trans_green" />

    <View
        android:id="@+id/centerView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/centerView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/realsy_logo" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/faceBookLoginButton"
        android:layout_width="@dimen/login_button_width"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="@dimen/login_button_text_size" />

    <Button
        android:id="@+id/emailSignUpButton"
        style="@style/LoginButtonsStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@color/login_button_bg_color"
        android:text="@string/login_sign_up_with_mail"
        android:textAllCaps="true"
        android:textColor="@color/login_button_text_color"
        android:textSize="@dimen/login_button_text_size" />

    <TextView
        android:id="@+id/loginMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/login_sign_in"
        android:textColor="@color/login_message_text_color"
        android:textSize="@dimen/login_message_text_size" />

</RelativeLayout>